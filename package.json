{
  "name": "vscode-world-clock",
  "displayName": "World Clock VSCode Extension",
  "description": "World Clock VSCode adds a customizable clock to your Visual Studio Code status bar.",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "publisher": "AlexandreToubiana",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Clock World StatusBar Extension Configuration",
      "properties": {
        "world-clock.timezones": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timezone": {
                "type": "string",
                "description": "The IANA timezone name."
              },
              "title": {
                "type": "string",
                "description": "The custom title to display for this timezone."
              }
            },
            "required": [
              "timezone"
            ],
            "additionalProperties": false
          },
          "default": [
            {
              "timezone": "UTC"
            },
            {
              "timezone": "America/New_York",
              "title": "NY"
            },
            {
              "timezone": "Europe/Paris"
            },
            {
              "timezone": "Asia/Tokyo",
              "title": "Tokyo"
            }
          ],
          "description": "An array of timezones to display in the status bar."
        },
        "world-clock.position": {
          "type": "string",
          "enum": [
            "left",
            "right"
          ],
          "default": "right",
          "description": "The position of the world clock in the status bar. Can be 'left' or 'right'."
        },
        "world-clock.displaySeconds": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show seconds in the status bar time."
        },
        "world-clock.displayClockTitle": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show clock title in the status bar time."
        },
        "world-clock.priority": {
          "type": "number",
          "default": 100,
          "description": "The priority of the world clock in the status bar. Higher priority means it will be shown more to the left."
        },
        "world-clock.is24Hour": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show clock in 24-hour format."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
